<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ubertapp.Activities.ActivityUserProfile">

    <TextView
        android:text="@string/activity_activity_user_profile_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/profileTextViewUserName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@+id/profileTextViewUserName"
        android:layout_alignParentStart="true"
        android:id="@+id/profileEditTextUserName" />

    <TextView
        android:text="@string/activity_activity_user_profile_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileEditTextUserName"
        android:layout_alignParentStart="true"
        android:id="@+id/profileTextViewEmail"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/profileTextViewEmail"
        android:layout_alignParentStart="true"
        android:id="@+id/profileEditTextEmail"/>

    <TextView
        android:text="@string/activity_activity_user_profile_PhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileEditTextEmail"
        android:layout_alignParentStart="true"
        android:id="@+id/profileTextViewPhoneNumber"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/profileTextViewPhoneNumber"
        android:layout_alignParentStart="true"
        android:id="@+id/profileEditTextPhoneNumber"/>

    <TextView
        android:text="@string/activity_activity_user_profile_PaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileEditTextPhoneNumber"
        android:layout_alignParentStart="true"
        android:id="@+id/profileTextViewPaymentMethod"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileTextViewPaymentMethod"
        android:layout_alignParentStart="true"
        android:id="@+id/profileSpinnerPaymentMethod"/>

</RelativeLayout>
