<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dryver.activities.ActivityRequest">

    <Button
        android:text="@string/activity_request_button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/requestButtonSubmit" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/requestButtonSubmit"
        android:layout_alignParentStart="true"
        android:id="@+id/requestScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="false">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/requestTripPrice"
                android:duplicateParentState="false"
                android:hint="Enter trip price" />

            <Button
                android:text="@string/activity_request_button_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requestButtonLocation" />

            <TextView
                android:text="@string/activity_request_selection_FromLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requestFromLocation" />

            <TextView
                android:text="@string/activity_request_selection_ToLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requestToLocation" />

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requestTimePicker" />

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requestDatePicker"
                android:focusable="false" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
